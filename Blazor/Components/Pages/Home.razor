@page "/"
<PageTitle>Home</PageTitle>

@switch (EmailEntered)
{
    case true:
        <LoginPanel Email="@Email" />
        break;
    case false:
        <WelcomeScreen OnEmailEntered="s => OnEmailEntered(s)" />
        break;
}


<script src="js/davidshimjs-qrcodejs-04f46c6/qrcode.js"></script>

@code {
    private string Email { get; set; }
    bool EmailEntered { get; set; } = false;

    private void OnEmailEntered(String email)
    {
        Email = email;
        EmailEntered = true;
    }
}
